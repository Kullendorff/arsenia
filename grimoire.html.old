  <div id="spellModal" class="modal">
    <div class="modal-text" id="spellModalContent"></div>
    <span class="modal-close" id="closeSpellModalBtn">&times;</span>
  </div>
  
  <script>
    // F√∂r klick-event och filtrering
    document.addEventListener('DOMContentLoaded', () => {
      // Filtrera spells baserat p√• kategori
      document.querySelectorAll('.category-button').forEach(button => {
        button.addEventListener('click', function() {
          const category = this.dataset.category;
          document.querySelectorAll('.category-button').forEach(btn => btn.classList.remove('active'));
          this.classList.add('active');
          
          // Visa/d√∂lj relevanta kategorier baserat p√• vald kategori
          if (category === 'all') {
            document.querySelectorAll('.category-heading, .spell-table, .spell-grid').forEach(el => {
              el.style.display = 'block';
            });
          } else {
            document.querySelectorAll('.category-heading, .spell-table, .spell-grid').forEach(el => {
              if (el.id === category || el.closest(`#${category}`)) {
                el.style.display = 'block';
              } else {
                el.style.display = 'none';
              }
            });
          }
        });
      });
      
      // Modal f√∂r spell-detaljer (enkel version)
      const spellModal = document.getElementById('spellModal');
      const spellModalContent = document.getElementById('spellModalContent');
      const closeSpellModalBtn = document.getElementById('closeSpellModalBtn');
      
      // √ñppna modal n√§r spells klickas
      document.querySelectorAll('.spell-card, [data-spell-id]').forEach(element => {
        element.addEventListener('click', function() {
          const spellId = this.dataset.spellId;
          // H√§r skulle man normalt h√§mta spell-data fr√•n en JS-objekt
          spellModalContent.innerHTML = `<h2>${this.querySelector('h3').textContent || this.querySelector('.spell-name').textContent}</h2>
          <p>Detaljerad information om besv√§rjelsen skulle visas h√§r.</p>`;
          spellModal.style.display = 'flex';
        });
      });
      
      // St√§ng modal
      closeSpellModalBtn.addEventListener('click', () => {
        spellModal.style.display = 'none';
      });
      
      // Klick utanf√∂r modal st√§nger den
      window.addEventListener('click', (event) => {
        if (event.target === spellModal) {
          spellModal.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>